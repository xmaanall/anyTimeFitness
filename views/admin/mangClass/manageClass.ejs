<head>
  <meta charset="UTF-8">
  <title></title>
  <style>
button {
  border-radius: unset;
  border: unset;
  background-color: unset;
  color: unset;
  font-size: unset;
  font-weight: unset;
  padding: unset;
  letter-spacing: unset;
  text-transform:unset;
  transition: unset;
}.btn btn-info:hover{
  color: #447a6a;
}
      table {
  table-layout: fixed;
  width: 200px;
  text-align: center;
}
.footer{
  position: fixed;
}
th,
td {
  width: 100px;
  overflow: hidden;
}
    </style>
</head>
<div
  class="container"
  style="width:80%;box-shadow: none;background-color: transparent;">
  <button id="memberBtn"
    onclick="window.location.href='/admin/addClass'">Add
    New Class</button>

  <h1 algin=center>Classes Information</h1>
  <table class="table table-striped table-class"
    id="table-id">

    <thead>
      <tr>
        <th style="width: 10px;">#</th>
        <th style="width: 50px;">Type</th>
        <th style="width: 80px;">Description</th>
        <th style="width: 50px;">Start Date</th>
        <th style="width: 50px;">End Date</th>
        <th style="width: 60px;">Registered Members</th>
        <th style="width: 60px;">Action</th>
      </tr>
    </thead>

    <tbody>
      <% results.forEach((result, i)=> { %>
        <tr>
          <th scope="row" style="width: 10px;"><%=i+1%></th>
            <td style="width: 50px;"> <%=result.type %>
              </td>
              <td style="width: 80px;"><%=result.description %></td>
                <td style="width: 50px;">
                  <%=
                    moment(result.startDate).
                    format('YYYY-MM-DDTHH:mm').trim()%></td>
                  <td style="width: 50px;"><%=
                      moment(result.endDate).
                      format('YYYY-MM-DDTHH:mm').trim()%></td>

                    <td style="width: 50px;"> <%=result.numberOfMembers %>
                      </td>
                      <td>

                        <form method="GET"
                          action="/admin/getClassDetails/<%=
                          result._id %>" style="float:
                          left;padding-right:
                          0px;">
                          <button type="submit" class="btn btn-info"
                            style="padding: 6px;color: white;
                            background-color:
                            #619B8A;border: #619B8A
                            ;">Update</button>
                        </form>
                        <form method="GET"
                          action="/admin/deleteByClassId/<%=
                          result._id %>" style="float:
                          right">
                          <button type="submit" class="btn btn-danger"
                            style="padding: 6px;color: white;">Delete</button>
                        </form>

                      </td>

                    </tr>
                    <% }) %>

                    </tbody>
                  </table>
                  <% if (pages> 0) { %>
                    <ul class="pagination text-center">
                      <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                        <% } else { %>
                          <li><a href="/admin/getAllClasses/1">First</a></li>
                          <% } %>
                            <% var i= (Number(current)> 5 ?
                              Number(current) - 4 : 1)
                              %>
                              <% if (i !== 1) { %>
                                <li class="disabled"><a>...</a></li>
                                <% } %>
                                  <% for (; i <= (Number(current) + 4)
                                    &&
                                    i <= pages;
                                    i++) { %>
                                    <% if (i == current) { %>
                                      <li class="active"><a><%= i %></a></li>
                                        <% } else { %>
                                          <li><a
                                              href="/admin/getAllClasses/<%=
                                              i %>"><%=
                                                i %></a></li>
                                            <% } %>
                                              <% if (i ==
                                                Number(current)
                                                + 4 && i
                                              <pages) { %>
                                                <li class="disabled"><a>...</a></li>
                                                <% } %>
                                                  <% } %>
                                                    <% if (current ==
                                                      pages) { %>
                                                      <li
                                                        class="disabled"><a>Last</a></li>
                                                      <% } else { %>
                                                        <li><a
                                                            href="/admin/getAllClasses/<%=
                                                            pages %>">Last</a></li>
                                                        <% } %>
                                                        </ul>
                                                        <% } %>
                                                        </div>
