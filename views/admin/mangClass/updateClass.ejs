   .filepond--root {
     width: 360px;
     height: 150px;
    
  }
#fileChooser {
  width: 100%;
  text-align: center;
  margin-top: 20px;
  display:none
}
#classImg {
  width: 100%;
  text-align: center;
  margin-top: 20px;

}
ion-icon {
  font-size: 40px;
  color:#fe7f2d;
  position: absolute;
  top: 370px;
  left:350px;
  --ionicon-stroke-width: 45px;
