    </style>
</head>
<div class="container" style="background-color: unset;box-shadow: unset;">
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <h1>Update Member</h1>
            <form method="post" action="/admin/updateByClassId/<%=result._id%>">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="category_name">Type: </label>
                            <input type="text" id="category_name"
                                class="form-control" name="type"
                                value="<%=result.type%>">
                        </div>
                        <div class="form-group">
                            <label for="category_name">Description: </label>
                            <input type="text" id="category_name"
                                class="form-control" name="description"
                                value="<%=result.description%>">
                        </div>
                        <div class="form-group">
                            <label for="category_name">Image: </label>
                        </div>
                        <div id="classImg"> <img class="avatar" width="100"
                                height="100"
                                src="<%=result.classImagePath%>"
                            alt=""></div>


                        <div id="fileChooser"> <input type="file" id="filepond1"
                                class="filepond" name="classImage"> </div>
                        <ion-icon name="create-outline" onclick="myFunction()"></ion-icon>
                        <div class="form-group">
                            <label for="category_name">Start Date: </label>
                            <input type="datetime-local" id="category_name"
                                class="form-control" name="startDate"
                                value="<%=
                                moment(result.startDate).
                                format('YYYY-MM-DDTHH:mm').trim()%>">
                        </div>
                        <div class="form-group">
                            <label for="product_name">End Date: </label>
                            <input type="datetime-local" id="product_name"
                                class="form-control" name="endDate" value="<%=
                                moment(result.endDate).
                                format('YYYY-MM-DDTHH:mm').trim()%>">

                        </div>
                        <button type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function myFunction() {
  var x = document.getElementById("fileChooser");
   var x1 = document.getElementById("classImg");
  if (x.style.display === "none") {
    x.style.display = "block";
    x1.style.display = "none";
    
  } else {
    x.style.display = "none";
    x1.style.display = "block";
  }
}
</script>